{
  "MonitoringApi": {
    "ApiKey": "",
    "StoreProvider": "InMemory",
    "RetentionHours": 24,
    "ActiveWindowMinutes": 10,
    "MaxEventsPerNode": 5000,
    "SqlServer": {
